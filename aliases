
if [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
	# Make Nautilus open with same command as OS X
	open() {
	    nautilus $1 >/dev/null 2>/dev/null & disown
	}
fi

# Easier navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Shortcuts
alias dl='cd ~/Downloads'
alias p='cd ~/Projects'
alias t='cd ~/Projects/Tools'
alias c='cd ~/Projects/Code'
alias ca='cd ~/Projects/Code/Acto'
alias cop='cd ~/Projects/Code/Personal'
alias cs='cd ~/Projects/Code/School'
alias chrome='google-chrome'

# Start local server
alias server='python -m SimpleHTTPServer'

# Global tool configs
alias addESLint='cp ~/Projects/Tools/Configs/eslintrc ./.eslintrc'
alias addEditorConfig='cp ~/Projects/Tools/Configs/editorconfig ./.editorconfig'

# Docker-compose shortcuts
alias dco="docker-compose"

function docker-clean() {
  docker rmi -f $(docker images -q -a -f dangling=true)
}

function docker-clean-all() {
  docker rmi -f $(docker images -q)
}
