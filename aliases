# Docker
alias dco="docker-compose"
alias dcol="docker-compose logs -f --tail 100"
alias fixip="sudo ifconfig lo0 alias 172.16.123.1 && echo 'Loopback has been aliased to 172.16.123.1'"

function docker-clean() {
  docker rmi -f $(docker images -q -a -f dangling=true)
}

# Syntax: dcorefresh target_service
# Example: dcorefresh elastic_suggester_service
function dcorefresh() {
	dco kill $1 ; dco build $1 ; dco up -d $1
}